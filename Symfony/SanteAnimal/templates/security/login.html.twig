{% extends 'baselogin.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="limiter">
    <div class="container-login100" style="background-image: url('http://localhost/mesprojets/seminairePHP/SanteAnimale/public/login/images/img-01.jpg');">
        <div class="wrap-login100 p-t-100 p-b-30">
            <form class="login100-form validate-form" method="POST">
                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <div class="login100-form-avatar">
                    <img src="http://localhost/mesprojets/seminairePHP/SanteAnimale/public/login/images/avatar.png" alt="AVATAR">
                </div>

                <div class="text-center w-full p-t-25 p-b-25">
                <span class="txt1 text-warning">
                    {% if error %}
                        {{ error }}
                        <!-- { { error.messageKey|trans(error.messageData, 'security') } }-->
                    {% endif %}
                </span>
                </div>

                <div class="wrap-input100 validate-input m-b-10" data-validate = "Email is required">
                    <input class="input100" type="email" name="email" placeholder="Email" value="{{ last_username }}">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user"></i>
                    </span>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <div class="wrap-input100 validate-input m-b-10" data-validate = "Password is required">
                    <input class="input100" type="password" name="password" placeholder="Password">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock"></i>
                    </span>
                </div>

                <div class="container-login100-form-btn p-t-10">
                    <button name="login" class="login100-form-btn" type="submit">
                        Login
                    </button>
                </div>
                {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                #}
                <div class="text-center w-full p-t-25 p-b-50">
                    <a href="#" class="txt1">
                        Forgot Username / Password?
                    </a>
                </div>

                <div class="text-center w-full">
                    <a class="txt1" href="register">
                        Create new account
                        <i class="fa fa-long-arrow-right"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
