{% extends 'base.html.twig' %}


{% block body %}
    <div class="col-xl-12 col-lg-7">
        <div class="card shadow mb-3">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">List of student</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-bordered table-responsive-md">
                    <tr>
                        <th>Identifiant</th>
                        <th>Nom</th>
                        <th>Action</th>
                        <th>Action</th>
                    </tr>
                    {% for p in listepays %}
                    <tr>
                        <td>{{ p.id }}</td>
                        <td>{{ p.nom }}</td>
                        <td><a href="{{ path('editPays', { 'id': p.id }) }}">Update</a></td>
                        <td><a href="{{ path('deletePays', { 'id': p.id }) }}" onclick="return confirm('Voulez-vous supprimer?');">Delete</a></td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
